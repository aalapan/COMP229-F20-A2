<div class="row justify-content-md-center">
    <div class="col">

      <a href="/businesscontacts-list/add" class="btn btn-primary btn-lg"><i class="fas fa-plus-circle"></i> Add New Business Contact</a>
      <hr>

      <table class="table table-striped table-bordered table-hover">
        <thead class="thead-dark">
          <tr>
            <th scope="col">Name</th>
            <th scope="col">Contact Number</th>
            <th scope="col">E-mail Address</th>
            <th></th>
            <th></th>
          </tr>
        </thead>
        <tbody>

          <% for(let count=0; count < businessContacts.length; count++) { %>
          <tr>
            <td><%= businessContacts[count].name %></td>
            <td><%= businessContacts[count].contactNumber %></td>
            <td><%= businessContacts[count].emailAddress %></td>
            <td>
              <a href="/businesscontacts-list/edit/<%= businessContacts[count]._id %>" class="btn btn-primary btn-sm">
                  <i class="fas fa-edit"></i> Edit</a>
            </td>
            <td>
                <a href="/businesscontacts-list/delete/<%= businessContacts[count]._id %>" class="btn btn-danger btn-sm">
                    <i class="fas fa-trash-alt"></i> Delete</a>
            </td>
          </tr>
          
        <% } %>

        </tbody>
      </table>

    </div>
  </div>